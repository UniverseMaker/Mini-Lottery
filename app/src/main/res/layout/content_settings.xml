<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtSettingsViewInstanceID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_margin="3dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnSettingsClearFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:theme="@style/AppTheme.Button.Blue"
        android:text="화면초기화 테스트"
        app:layout_constraintBottom_toTopOf="@id/btnSettingsClearRecord"/>

    <Button
        android:id="@+id/btnSettingsClearRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:theme="@style/AppTheme.Button.Blue"
        android:text="기록초기화"
        app:layout_constraintBottom_toTopOf="@id/btnSettingsClearALL"/>

    <Button
        android:id="@+id/btnSettingsClearALL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:theme="@style/AppTheme.Button.Blue"
        android:text="전체초기화"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>