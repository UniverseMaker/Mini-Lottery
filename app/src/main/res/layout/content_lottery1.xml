<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빠른추첨"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빠른추첨이란? 대상인원수와 당첨인원수만 입력후 간단하게 당첨자를 선정하는 기능입니다!"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="추첨설명"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <EditText
        android:id="@+id/txtLottery1Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="textPersonName"
        android:textColorHint="#b3b3b3"
        android:hint="추첨의 설명을 자세히 적어주세요"
        android:background="@drawable/style_edittext_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="추첨인원"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtLottery1Description" />

    <EditText
        android:id="@+id/txtLottery1Member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="number"
        android:textColorHint="#b3b3b3"
        android:hint="총 추첨대상 인원수를 입력하세요"
        android:background="@drawable/style_edittext_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="당첨인원"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtLottery1Member" />

    <EditText
        android:id="@+id/txtLottery1Wim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textColorHint="#b3b3b3"
        android:hint="총 추첨인원 중 당첨될 사람의수를 입력하세요"
        android:background="@drawable/style_edittext_1"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIP! 추첨 설명을 자세히 적으면 나중에 추첨기록에서 손쉽게 기록을 다시 찾아보실 수 있습니다!"
        app:layout_constraintBottom_toTopOf="@id/btnLottery1Start" />

    <Button
        android:id="@+id/btnLottery1Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추첨시작"
        style="@style/Widget.AppCompat.Button.Colored"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <!-- TIP! 추첨설명을 자세히 기록하면 기록창에서 언제나 손쉽게 찾아보실 수 있습니다 -->
</android.support.constraint.ConstraintLayout>